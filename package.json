{
  "name": "industria-bridge",
  "version": "1.0.0",
  "description": "App Puente para enviar archivos de corte a tronzadoras CNC",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win portable --publish never",
    "build:mac": "electron-builder --mac zip --publish never",
    "build:linux": "electron-builder --linux AppImage --publish never"
  },
  "author": "IndustrIA",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.industria.bridge",
    "productName": "IndustrIA Bridge",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": ["portable"],
      "artifactName": "IndustrIA-Bridge-Portable.exe"
    },
    "mac": {
      "target": ["zip"],
      "category": "public.app-category.productivity",
      "artifactName": "IndustrIA-Bridge-mac.zip"
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Utility",
      "artifactName": "IndustrIA-Bridge.AppImage"
    }
  }
}
